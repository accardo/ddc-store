/* pages/ordergoods/ordergoods.wxss */
@import '../../common/common';
page,.order-goods{
  height: 100%;
  overflow: hidden;
}
.order-goods{
  display: flex;
  flex-flow: column;
}
.search-box{
  width: 100%;
  height: 90rpx;
  box-sizing: border-box;
  padding: 15rpx 30rpx;
  overflow: hidden;
  background-color: rgb(240,240,240);
}
.search{
  display: flex;
  height: 60rpx;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 10rpx;
}
.search image{
  margin-right: 10rpx;
  width: 35rpx;
  height: 35rpx;
}
.search text{
  font-size: 30rpx;
  color: #666;
}

.bottom-box{
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  height: 80rpx;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  left: 0;
  box-shadow: 1px -1px 5px rgba(240,240,240,.6);
  background-color: #fff;
  z-index: 100;
}
.bottom-price{
  font-size: 32rpx;
  color: #666;
}
.bottom-btn{
  margin: 0;
  background-color: rgba(255,0,0,.8);
  color: #fff;
  border: none;
}
.btns{
  display: flex;
  padding: 0;
  align-items: center;
}
.btns button{
  margin: 0;
  font-size: 32rpx;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 0;
  background-color: rgba(0,0,0,.2);
}
.btn-cancel{
  width: 200rpx;
}
.btns .btn-sub{
  flex: 3;
  color: #fff;
  background-color: rgba(250,0,0,.8);
}
.bottom-price > text{
  display: inline-block;
  font-size: 32rpx;
  color: rgba(255,0,0,1);
}
.category-product{
  width: 100%;
  height: 100%;
  display: flex;
  flex: 1;
  box-sizing: border-box;
  overflow: hidden;
  padding-bottom: 80rpx;
}
.category-product.active{
  padding-bottom: 0;
}
.category-nav{
  width: 200rpx;
  overflow: hidden;
  background-color: #f6f6f6;
}
.category-nav-item{
  max-width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  color: #333;
  font-size: 28rpx;
  text-align: center;
}
.category-nav-item.active_true{
  position: relative;
  background-color: #fff;
  font-size: 30rpx;
  font-weight: bold;
}
.category-nav-item.active_true::after{
  position: absolute;
  left: 0;
  top:20rpx;
  content: "";
  height: 50%;
  width: 10rpx;
  background-color: #666;
}
.category-product .products{
  flex: 1;
}