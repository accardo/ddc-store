/* pages/inventoryreview/inventoryreview.wxss */
@import '../../common/common';
page
{
  position: relative;
  height: 100%;
  width: 100%;
  overflow: hidden;
}
.goods-box{
  padding:0 30rpx;
  box-sizing: border-box;
}
.goods-item{
  display: flex;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom:1px solid #e6e6e6;
}
.goods-item:last-child{
  border-bottom: none;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  box-shadow: 1px 1px 3px #ccc;
  border-radius: 5rpx;
  margin-right: 20rpx;
}
.goods-img.active{
  filter:grayscale(1);
  -webkit-filter:grayscale(1);
}
.goods-txt-box{
  flex: 3;
}
.goods-txt{
  font-size: 30rpx;
  color: #333;
}
.goods-type{
  padding:0 12rpx;
  margin-right: 5rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(255,0,0,1);
}
.goods-txt text:last-child{
  padding-left: 10rpx;
}
.goods-stock{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #000;
  display: flex;
}
.goods-stock button{
  width:70rpx;
  height:45rpx;
  font-size: 24rpx;
  line-height:45rpx;
  padding: 0;
  margin: 0;
  margin-left: 10rpx;
}
.goods-label{
    margin-top: 5rpx;
}
.goods-label text{
  font-size: 28rpx;
  color: rgba(255,0,0,1);
  border: 1px solid rgba(255,0,0,1);
  background-color: #fff;
  padding: 0 20rpx;
  border-radius: 8rpx; 
  margin-right: 20rpx;
}
.goods-label text:last-child{
  margin-right: 0;
}
.product-count{
  display: flex;
  margin-top: 10rpx;
  justify-content:flex-end;
  align-items: center;
  position: relative;
  margin-right: 25rpx;
}
.product-count .input-icon{
  width: 50rpx;
  height: 50rpx;
}
.product-count .input-number{
  width: 120rpx;
  text-align: center;
}
.product-count .input-number text{
  font-size: 32rpx;
  color: #111;
}
.product-count .input-number .red{
  color: rgba(255,0,0,1);
}
.product-count .input-number text:first-child{
  margin-right: 10rpx;
}

.stock-num{   
  height: 60rpx;
  line-height: 60rpx;
  align-items: center;
}
.edit{
  display: inline-block;
  color: rgba(9,165,218,1);
  font-size: 32rpx;
}
.red{
  color: rgba(255,0,0,1);
}
.mglr10{
  margin-left:20rpx;
}
.number-box {
  display: flex;
  line-height:45rpx;
  height:45rpx;
  margin-right: 5rpx;
}
.number-box input{
  display: inline-block;
  margin:0 5rpx;
  text-align: center;
  width: 53rpx;
}
.goods-num{
  margin-top: 8rpx;
  font-size: 30rpx;
  color: #333;
}
.goods-num text:last-child{
  padding-left: 10rpx;
}
.number-box-active input{
  width: 58rpx;
  height: 45rpx;
  min-height: 45rpx;
  border:1px solid #ccc;
}