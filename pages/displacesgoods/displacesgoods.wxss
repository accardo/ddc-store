/* pages/displacesgoods/displacesgoods.wxss */
@import '../../common/common';
page,.displace{
  height: 100%;
  overflow: hidden;
}
page{
   background-color: #f9f9f9;
}
.displace{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-content: space-between;
}
.scroll-title{
  display: flex;
  width: 100%;
  padding:20rpx 30rpx;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
}
.scroll-title > text{
  font-size: 32rpx;
  color: #666;
}
.scroll-title > button{
  margin: 0;
  background-color: rgba(255,0,0,.7);
  color: #fff;
}
.displace-view{
  flex: 1;
  height: 50%;
  background-color: #fff;
}
.btn-review >button{
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 0;
  color: #fff;
  background-color: rgba(255,0,0,.7);
}
.btn-review >button[disabled]{
  color: #666;
}