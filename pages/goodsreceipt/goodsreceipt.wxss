/* pages/goodsreceipt/goodsreceipt.wxss */
page,.goods-receipt{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.scroll-box{
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 80rpx;
}
.btn-box{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  left: 0;
  box-sizing: border-box;
  box-shadow: 1px -1px 2px #ccc;
}
.btn-box button{
  margin:0 10rpx;
  padding: 0 30rpx;
  font-size: 30rpx;
}
.btn-box button:last-child{
  color: #fff;
  background-color: rgba(250,0,0,8);
  border: none;
}