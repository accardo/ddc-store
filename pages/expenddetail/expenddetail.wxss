/* pages/expenddetail/expenddetail.wxss */
@import '../../common/common';
page{
  background-color: #fff;
}
.expent{
  width: 100%;
}
.expent-tip{
  width: 100%;
  height: 70rpx;
  box-sizing: border-box;
  line-height: 70rpx;
  font-size: 30rpx;
  color: #fff;
  text-align: center;
  background-color:rgba(250,0,0,.6); 
}

.course-item{
  margin-top:20rpx;
  width: 100%;
}
.course-name{
  padding: 10rpx 30rpx;
  background-color:#e6e6e6;
}
.course-time{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.course-name > text,.course-time > text{
  display:block;
  font-size: 32rpx;
  color: #333;
}
.course-name > text:last-child{
  padding-top: 10rpx;
}
.course-share{
  width: 100%;
  padding: 20rpx 0;
  box-sizing: border-box;
  display: flex;
  justify-content: space-around;
  background-color: #f1f1f1;
}
.course-info{
  flex: 1;
  padding: 0 20rpx;
  box-sizing: border-box;
  border-right: 1px solid #ccc;
}
.course-info:last-child{
  border:none;
}
.course-info > text{
  font-size: 32rpx;
  display: block;
  color: #333;
  text-align:center;
  padding: 5rpx 0;
}

.show-box > input{
  width: 80%;
  margin: 0 auto;
  border: 1px solid #ccc;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  padding-left:20rpx;
  border-radius: 10rpx;
}
.show-box > button{
  font-size: 30rpx;
  width:220rpx;
  text-align: center;
  margin-top: 30rpx;
  color: #fff;
  background-color: rgba(255,0,0,1);
}