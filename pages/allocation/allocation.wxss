/* pages/allocation/allocation.wxss */
@import '../../common/common';
page,.allot{
  height: 100%;
  overflow: hidden;
}
.products{
  padding-bottom: 170rpx;
  box-sizing: border-box;
}
.select-ads{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
  background-color: rgba(255,0,0,.7);
}
.select-ads .ads-name{
  font-size: 30rpx;
  color: #fff;
}
.select-ads .select-btn{
  font-size: 28rpx;
  margin: 0;
  background-color: #fff;
}
.btn-review >button{
  height: 70rpx;
  line-height: 70rpx;
  font-size: 32rpx;
  border-radius: 0;
  color: #fff;
  background-color: rgba(255,0,0,.7);
}
.add-shaop{
  width: 100%;
  border-top:1px solid #ccc;
  text-align: center;
  margin: 30rpx auto 20rpx;
}
.add-shaop text{
  color: rgba(0,157,218,1);
  font-size: 34rpx;
  text-decoration:underline;
}