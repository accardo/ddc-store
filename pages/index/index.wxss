/* pages/index/index.wxss */
@import '../../common/common';
.index-box{
  width: 100%;
  overflow: hidden;
}
.mt20{
  margin-top: 20rpx;
}
.select-ads{
  width: 100%;
  height: 100rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 30rpx;
}
.select-ads .ads-name{
  font-size: 30rpx;
  color: #333;
}
.select-ads .select-btn{
  font-size: 28rpx;
  margin: 0;
  background-color: rgba(250,0,0,.6);
}
.page-tit{
  width: 100%;
  background-color: rgba(250,0,0,.6);
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  padding: 0rpx 30rpx; 
  height: 70rpx;
  line-height: 70rpx;
  box-sizing: border-box;
}
.user-info{
  margin:10px 0;
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}
.user-info  .user-item{
  height: 65rpx;
  line-height: 65rpx;
  padding-left: 30rpx;
  font-size: 32rpx;
  border-top:1px solid #ccc;
  border-bottom: 1px solid #ccc;
  background-color: #fff;
  margin-bottom: 10px;
}
.user-info .center{
  width: 220rpx;
  margin:20px auto 0;
  border-radius: 10rpx;
  padding-left: 0;
  height: 70rpx;
  line-height: 70rpx;
  background-color: rgba(250,0,0,.8);
  color: #fff;
  text-align: center;
}
