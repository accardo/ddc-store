/* pages/search/search.wxss */
page,.search-container{
  width: 100%;
  height: 100%;
  overflow: hidden;
}
.search-box{
  width: 100%;
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 15rpx 30rpx;
  background-color: rgb(248,248,248);
  height: 90rpx;
  z-index: 100;
}
.search-box .search-btn{
  font-size: 14px;
  padding-left: 20rpx;
  overflow: hidden;
  height: 60rpx;
  line-height: 60rpx;
  color: #000;
}
.search-inp{
  position: relative;
  display: flex;
  flex: 1;
  margin-right: 10rpx;
  align-items: center;
  height: 60rpx;
  background-color: #fff;
  border-radius: 8rpx;
}
.search-inp image{
  width: 40rpx;
  height: 40rpx;
  padding: 10rpx 20rpx;
}
.search-inp input{
  font-size: 30rpx;
  flex: 3;
  height: 60rpx;
  line-height: 60rpx;
}

.search-no{
  width: 100%;
  height: 100%;
  padding-top: 280rpx;
  overflow: hidden;
  text-align: center;
}
.search-no image{
  width: 240rpx;
  height: 240rpx;
  display: block;
  margin: 0 auto;
}
.search-no text{
  font-size: 32rpx;
  color: #999;
}
.scroll-box{
  padding-top:90rpx;
  height: 100%;
  box-sizing: border-box;
}