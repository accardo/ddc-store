<!--pages/orderfrom/orderfrom.wxml-->
<view class="order-from">
  <view class="scroll-box">
    <view class='img-box' wx:if="{{pageindex == 2 || pageindex == 7}}">
      <view class='img-txt'>上传图片</view>
      <view class='img-list'>
        <image wx:for="{{ imgList }}" wx:key="index" src="{{item}}" data-index="{{index}}" bindtap="zoomImg"></image>
      </view>
    </view>
     <receipt-list
         receipt-arr="{{receiptList}}"
         order-status="{{ status }}"
         page-type="{{pagetype}}"
         bind:bindReceiptData="_bindReceiptData"
     ></receipt-list>
    <view wx:if="{{ imgIsShow }}" class="img-big" bindtap="imgClose">
      <image src="{{ imgBigUrl }}" mode="widthFix"></image>
    </view>
  </view>
  <view class="btn-review" wx:if="{{pageindex == 7 && status == 4}}">
    <button bindtap="returnUpdate">保存</button>
  </view>
</view>
