/* components/receiptList/receiptList.wxss */

.goods-box{
  padding: 0 30rpx;
  box-sizing: border-box;
}
.goods-item{
  display: flex;
  padding: 30rpx 0;
  box-sizing: border-box;
  border-bottom:1px solid #e6e6e6;
}
.goods-item:last-child{
  border-bottom: none;
}
.goods-img{
  width: 150rpx;
  height: 150rpx;
  box-shadow: 1px 1px 3px #ccc;
  border-radius: 5rpx;
  margin-right: 30rpx;
}
.goods-img.active{
  filter:grayscale(1);
  -webkit-filter:grayscale(1);
}
.goods-txt-box{
  flex: 3;
}
.goods-txt{
  font-size: 30rpx;
  color: #333;
}
.goods-type{
  padding:0 12rpx;
  margin-right: 5rpx;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #fff;
  background-color: rgba(255,0,0,1);
}
.goods-txt text:last-child{
  padding-left: 10rpx;
}
.goods-stock{
  margin-top: 10rpx;
  font-size: 30rpx;
  color: #000;
}
.goods-label{
  margin-top: 8rpx;
}
.goods-label text{
  font-size: 28rpx;
  color: rgba(255,0,0,1);
  border: 1px solid rgba(255,0,0,1);
  background-color: #fff;
  padding: 0 20rpx;
  border-radius: 8rpx; 
  margin-right: 20rpx;
}
.goods-num{
  margin-top: 8rpx;
  font-size: 30rpx;
  color: #333;
}
.goods-num text:last-child{
  padding-left: 10rpx;
}
.goods-inp{
  display: flex;
  align-items: center;
}
.goods-inp input{
  width: 100rpx;
  text-align: center;
  border-radius: 8rpx;
  border: 1px solid #e6e6e6;
}
.goods-label text:last-child{
  margin-right: 0;
}