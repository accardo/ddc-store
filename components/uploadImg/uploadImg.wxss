/* components/uploadImg/uploadImg.wxss */
@import '../../common/common';
.upload-box{
    margin: 0 auto;
    width: 240rpx;
    height: 230rpx;
    border: 1px dashed #ccc;
    padding:15rpx;
    text-align: center;
    box-sizing: border-box;
}
.upload-box text{
    font-size: 32rpx;
}
.upload-box image{
    display: block;
    width: 150rpx;
    margin: 0 auto;
    height: 150rpx;
}
.img-list{
    width: 100%;
    height: auto;
    display: flex;
    padding:0 30rpx 30rpx;
    box-sizing: border-box;
    align-items:center;
    justify-content: space-between;
    flex-wrap: wrap;
}
.img-sk {
    margin-top:30rpx;
    width: 31%;
    height: 190rpx;
    position: relative;
}
.img-sk .img-close {
    position:absolute;
    right:-10rpx;
    /*top: 10rpx;*/
    font-size:24rpx;
    background:rgba(0,0,0, 0.8);
    width:35rpx;
    height:35rpx;
    border-radius:50%;
    text-align:center;
    color:#fff;
    line-height:35rpx;

}
.img-list image{
    width: 100%;
    height: 100%;
    border-radius: 10rpx;
}
.img-big {
    position: fixed;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0, 0.6);
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
}
.img-big image {
    width: 90%;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    margin: 0 auto;
    display: block;
}
