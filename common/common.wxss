page{
  width: 100%;
  min-height: 100%;
}
.mt20{
  margin-top: 20rpx;
}
/***弹窗****/
.show-bg{
  position: fixed;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  min-height: 100%;
  background-color: rgba(0,0,0,.4);
  z-index: 99;
}
.show-box{
  position: fixed;
  left: 50%;
  top: 40%;
  text-align: center;
  transform: translate(-50%,-50%);
  width: 75%;
  box-shadow: 1px 1px 5px #999,-1px 1px 5px #666;
  z-index: 100;
  background-color: #fff;
  border-radius: 10rpx;
}
.show-bg.close,.show-box.close{
  display: none;
}
.show-box .show-content{
  padding: 30rpx;
}
.show-box .show-content > input{
  width: 80%;
  margin: 0 auto;
  border: 1px solid #ccc;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  padding: 10rpx 0 10rpx 20rpx;
  border-radius: 10rpx;
}
.show-box .btn-box{
  width: 100%;
  position: relative;
  padding:20rpx 30rpx;
  display: flex;
  height: 100rpx;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  border-top:1px solid #ccc;
}
.show-box .btn-box .btn-def{
  background-color: transparent;
  font-size: 36rpx;
  box-shadow: 0px 0px 0px;
  color: rgba(250,0,0,.7);
  width: 100%;
  margin: 0;
}

/***弹窗  end****/

.tip-box{
  background-color: rgba(255,213,217,1);
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 30rpx;
  overflow: hidden;
  box-sizing: border-box;
  font-size: 28rpx;
}

button.nobordr::after {
  border: 0;
}

.scroll-box{
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 80rpx;
}

/* 底部按钮 */
.bottom-box{
  width: 100%;
  position: fixed;
  box-sizing: border-box;
  height: 80rpx;
  padding: 10rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  bottom: 0;
  left: 0;
  background-color: #fff;
  border-top:1px solid #ccc; 
  z-index: 100;
}
.btn-review{
  position: fixed;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 32rpx;
  background-color: rgba(255,0,0,1);
  z-index: 10;
}
